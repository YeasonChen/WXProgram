/* pages/products/products.wxss */

.search_bar {
  height: 52px;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.search_input {
  height: 32px;
  margin: 0px 15px;
  border: 0.5px solid rgb(179, 179, 179);
  border-radius: 17px;
  flex-grow: 1;
  padding-left: 190rpx;
  display: flex;
  align-items: center;
}

.search_input label {
  font-size: 28rpx;
  color: rgb(179, 179, 179);
}

.search_icon {
  width: 18px;
  height: 18px;
  position: absolute;
  top: 17px;
  left: 170rpx;
}

.cell {
  width: 100%;
  position: relative;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column; 
  align-content: center;
}

.product_photo {
  width: 100%;
  flex-flow: 1;
}

.title_name {
  width: 100%;
  font-size: 34rpx;
  line-height: 31px;
  height: 31px;
  flex-grow: 0;
  color: rgb(92, 92, 92);
  text-align: center;
}

.title_label {
  width: 100%;
  font-size: 34rpx;
  height: 50px;
  flex-grow: 0;
  color: rgb(92, 92, 92);
  text-align: center; 
  padding-top: 8px;
}

.bottom_view {
  width: 100%;
  height: 10px;
  position: relative;
  bottom: 0px;
  flex-grow: 0;
  background-color: rgb(243, 243, 243);
}

.toast_container{
  opacity: 0;
  display: flex;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  justify-content: center;
  align-items: center;
}

.toast_view{
  background-color: rgba(58, 58, 58, 0.8);
  border-radius: 5px;
  position: relative;
  padding: 6px 10px 3px 10px;
  height: 28px; 
  top: -50px;
}

.toast_view label{
  font-size: 15px;
  color: white;
  text-align: center;
}
